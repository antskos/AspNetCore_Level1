@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Surname</td>
                <td>@emp.Name</td>
                <td>@emp.Patronymic</td>
                <td>@emp.Age</td>
                <td><a asp-controller="Employees" asp-action="EmployeeDetails" asp-route-id="@emp.Id">Детальная информация</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>
